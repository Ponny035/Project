[[LoginDBAdapter.java]]
public String getMatchUser(String User)
    {
        Cursor cursor1=db.query("LOGIN", null,  COL_USERNAME + "=?", new String[]{User}, null, null, null);
        if(cursor1.getCount()>1)
        {
            cursor1.close();
            return "User Match";
        }
        return User;
    }

